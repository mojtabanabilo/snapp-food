{
  "compilerOptions": { 
    "module": "esnext", 
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "./env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
